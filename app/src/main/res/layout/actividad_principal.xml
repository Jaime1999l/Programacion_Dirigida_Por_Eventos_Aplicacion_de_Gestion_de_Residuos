<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Saludo personalizado -->
        <TextView
            android:id="@+id/greeting_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido a la aplicación de recogida de residuos!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Imagen de reciclaje centrada -->
        <ImageView
            android:id="@+id/recycling_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/reciclaje"
            android:contentDescription="Imagen de reciclaje"
            android:layout_gravity="center" />

        <!-- Botón para abrir el menú -->
        <Button
            android:id="@+id/open_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir menú"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <!-- Menú personalizado -->
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Opción del menú: Calendario -->
        <TextView
            android:id="@+id/nav_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:text="Calendario de recolección"
            android:padding="12dp"
            android:textSize="16sp"
            android:drawablePadding="10dp" />

        <!-- Opción del menú: Mapa -->
        <TextView
            android:id="@+id/nav_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_map"
            android:text="Mapa de puntos de reciclaje"
            android:padding="12dp"
            android:textSize="16sp"
            android:drawablePadding="10dp" />

        <!-- Opción del menú: Estadísticas -->
        <TextView
            android:id="@+id/nav_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_stats"
            android:text="Estadísticas de reciclaje"
            android:padding="12dp"
            android:textSize="16sp"
            android:drawablePadding="10dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

